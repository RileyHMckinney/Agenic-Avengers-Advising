{
    "ui_name": "Pastel Orange-Yellow Chatbot Interface",
    "description": "A minimal, ChatGPT-style chatbot UI with soft gradients, rounded corners, and interactive quick-start buttons. The color scheme uses a pastel orange-to-yellow background gradient to create a warm, optimistic aesthetic.",
    "layout": {
      "container": {
        "width": "480px",
        "height": "620px",
        "border_radius": "20px",
        "padding": "24px",
        "background": "linear-gradient(135deg, #FFEAC2 0%, #FFD6A5 50%, #FFF8E1 100%)",
        "box_shadow": "0 4px 16px rgba(0, 0, 0, 0.08)",
        "border": "1px solid rgba(255, 255, 255, 0.3)",
        "display": "flex",
        "flex_direction": "column",
        "justify_content": "space-between",
        "font_family": "'Inter', 'Helvetica Neue', sans-serif"
      },
      "top_window_controls": {
        "type": "horizontal_indicator_lights",
        "alignment": "left",
        "spacing": "8px",
        "padding_bottom": "12px",
        "elements": [
          { "shape": "circle", "size": "10px", "color": "#FF5F56" },
          { "shape": "circle", "size": "10px", "color": "#FFBD2E" },
          { "shape": "circle", "size": "10px", "color": "#27C93F" }
        ]
      },
      "chat_area": {
        "type": "scrollable",
        "height": "calc(100% - 80px)",
        "overflow_y": "auto",
        "padding_top": "12px",
        "padding_bottom": "12px",
        "display": "flex",
        "flex_direction": "column",
        "gap": "16px",
        "scrollbar": {
          "width": "6px",
          "thumb_color": "rgba(0,0,0,0.1)",
          "track_color": "transparent",
          "border_radius": "4px"
        }
      },
      "input_section": {
        "type": "fixed_bottom_bar",
        "background": "rgba(255,255,255,0.6)",
        "border_radius": "16px",
        "padding": "8px 12px",
        "display": "flex",
        "align_items": "center",
        "backdrop_filter": "blur(8px)",
        "gap": "8px",
        "input_field": {
          "placeholder": "Ask a question",
          "flex": 1,
          "font_size": "15px",
          "background": "transparent",
          "border": "none",
          "outline": "none",
          "color": "#333"
        },
        "send_button": {
          "icon": "arrow_right",
          "background": "transparent",
          "border": "none",
          "color": "#333",
          "cursor": "pointer",
          "hover_effect": "opacity:0.8"
        }
      }
    },
    "components": {
      "message_bubble": {
        "base_style": {
          "max_width": "80%",
          "padding": "14px 18px",
          "border_radius": "16px",
          "font_size": "15px",
          "line_height": "1.4",
          "box_shadow": "0 2px 8px rgba(0,0,0,0.04)"
        },
        "user_message": {
          "alignment": "right",
          "background": "linear-gradient(135deg, #FFB347 0%, #FFD152 100%)",
          "color": "#222",
          "border_top_right_radius": "4px",
          "margin_left": "auto",
          "animation": "fadeInRight 0.4s ease"
        },
        "bot_message": {
          "alignment": "left",
          "background": "rgba(255,255,255,0.7)",
          "color": "#111",
          "border_top_left_radius": "4px",
          "margin_right": "auto",
          "animation": "fadeInLeft 0.4s ease"
        },
        "timestamp_style": {
          "font_size": "11px",
          "opacity": "0.6",
          "margin_top": "4px",
          "text_align": "right"
        }
      },
      "quick_start_buttons": {
        "position": "above_input_bar",
        "layout": {
          "display": "flex",
          "gap": "12px",
          "justify_content": "center",
          "padding_bottom": "12px"
        },
        "buttons": [
          {
            "label": "Resume Advice",
            "background": "#000",
            "color": "#fff",
            "padding": "10px 16px",
            "border_radius": "24px",
            "font_size": "14px",
            "hover_effect": "background: #333"
          },
          {
            "label": "Job Search",
            "background": "#000",
            "color": "#fff",
            "padding": "10px 16px",
            "border_radius": "24px",
            "font_size": "14px",
            "hover_effect": "background: #333"
          },
          {
            "label": "Course Planning",
            "background": "#000",
            "color": "#fff",
            "padding": "10px 16px",
            "border_radius": "24px",
            "font_size": "14px",
            "hover_effect": "background: #333"
          },
          {
            "label": "Interview Prep",
            "background": "#000",
            "color": "#fff",
            "padding": "10px 16px",
            "border_radius": "24px",
            "font_size": "14px",
            "hover_effect": "background: #333"
          }
        ]
      }
    },
    "animations": {
      "fadeInLeft": "from { opacity: 0; transform: translateX(-10px); } to { opacity: 1; transform: translateX(0); }",
      "fadeInRight": "from { opacity: 0; transform: translateX(10px); } to { opacity: 1; transform: translateX(0); }"
    },
    "aesthetic_notes": {
      "theme": "warm pastel gradient (orange to yellow)",
      "vibe": "friendly, approachable, and student-focused",
      "intended_use": "university advisor chatbot interface (e.g., for UTD student support)",
      "mood": "bright, uplifting, encouraging, but still professional"
    }
  }
